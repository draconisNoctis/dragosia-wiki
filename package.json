{
    "name": "dragosia",
    "version": "0.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev --parallel",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "lint": "turbo run lint"
    },
    "resolutions": {
        "debug": "4.3.4"
    },
    "devDependencies": {
        "@dragosia/eslint-config": "workspace:*",
        "@trivago/prettier-plugin-sort-imports": "4.0.0",
        "eslint": "8.31.0",
        "prettier": "2.8.1",
        "prettier-plugin-packagejson": "2.3.0",
        "turbo": "latest",
        "typescript": "4.9.4"
    },
    "packageManager": "yarn@3.3.1",
    "engines": {
        "node": ">=14.0.0"
    }
}
